/* pages/me-center/me-center.wxss */

.page-hd {
  align-items: center;
  position: relative;
  background-color: whitesmoke;
  height: 40vh;
}

.bg-img {
  width: 100%;
  height: 25vh;
  z-index: -11;
  top: 0rpx;
}

.user-info-img {
  width: 20vw;
  height: 20vw;
  border-radius: 50px;
  overflow: hidden;
}

.info-hd {
  margin-top: 20px;
}

.user-info-name {
  text-align: center;
  margin: 15rpx 0rpx;
}

.courses {
  position: absolute;
  bottom: 15rpx;
  width: 100%;
  right: 0rpx;
  left: 0rpx;
  display: flex;
}

.course-item {
  flex: 1;
  align-items: center;
}

.navs {
  display: flex;
  flex-flow: row wrap;
}

.nav-item {
  width: 33vw;
  height: 15vh;
  border-right: 1rpx solid whitesmoke;
  border-bottom: 1rpx solid whitesmoke;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 5vh;
}

.bd-img {
  width: 10vw;
  height: 10vw;
}

.btn-login {
  height: 100rpx;
  width: 80vw;
  background: linear-gradient(gainsboro, white, gainsboro);
  border-radius: 100rpx;
  padding: 0rpx 20rpx;
  margin: 10vw;
  text-align: center;
  color: orangered;
}
