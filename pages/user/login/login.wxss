/* pages/login/login.wxss */

.top-bg {
  width: 100%;
  height: 30vh;
}

.pa-title {
  display: flex;
  height: 100rpx;
  width: 100%;
  text-align: center;
  margin-top: -100rpx;
}

.title {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
}

.title-active {
  border-bottom: 3rpx orangered solid;
}

.pass-login {
  margin: 40rpx;
}

.pass-input {
  height: 100rpx;
  background-color: whitesmoke;
  border-radius: 100rpx;
  border: 0.5rpx solid whitesmoke;
  padding: 0rpx 30rpx;
  margin-bottom: 40rpx;
}
.pass-input2 {
  height: 100rpx;
  margin-right: 20vw;
  background-color: whitesmoke;
  border-radius: 100rpx;
  border: 0.5rpx solid whitesmoke;
  padding: 0rpx 30rpx;
  margin-bottom: 40rpx;
}
.btn-login {
  height: 100rpx;
  background: linear-gradient(gainsboro, white, gainsboro);
  border-radius: 100rpx;
  padding: 0rpx 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
  color: orangered;
}

.pa-regis {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.apply {
  flex: 1;
  flex-wrap: wrap;
  text-align: right;
}

.regist {
  display: inline-block;
  color: orangered;
}

.get-yzm {
  position: absolute;
  right: 40rpx;
  margin-top: -142rpx;
  width: 30vw;
  height: 104rpx;
  line-height: 104rpx;
   border: 0.5rpx solid yellow;
  background: linear-gradient(to right, yellow, orange);
  border-radius: 100rpx;
  padding: 0rpx 30rpx;
  text-align: center;
  font-size: 28rpx;
}
