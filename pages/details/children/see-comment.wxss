/* pages/details/children/see-comment.wxss */

.con-tb {
    box-sizing: border-box;
    background-color: #FFF;
    border-bottom: 1px solid #D9D9D9;
    z-index: 5;
    position: fixed;
    top: 0;
    width: 100%;
    height: 64px;
    padding: 10px 15px;
    display: flex;
    align-items: center;
}

.con-bd {
    margin-top: 70px;
}

.delete-btn {
    position: absolute;
    top: 15px;
    right: 15px;
}

.popup-style {
    padding: 30px 50px;
}

.popup-title {
    margin-bottom: 20px;
    text-align: center;
}

.popup-score {
    margin-bottom: 20px;
    text-align: center;
}

.popup-textarea {
    padding: 10px 15px;
    margin-bottom: 20px;
    border: solid 1rpx #D9D9D9;
    border-radius: 4rpx;
}

.btn-submit {
    width: 150px;
    margin: 0 auto;
}